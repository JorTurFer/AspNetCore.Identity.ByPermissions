@model PermissionsManageViewModel

@{
    Layout = null;
}
<input type="hidden" id="roleId" value="@Model.RoleId" />
<div class="container">
    @foreach (var group in Model.Groups)
    {
        <div class="row justify-content-center">
            <div class="col-md-2 col-md-offset-4">
                <hr class="style3" />
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model.Permissions.Where(x => x.PermissionGroup == group))
            {
                <div class="col-md-3">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="@item.PermissionId" checked="@item.IsActive">
                        <label class="custom-control-label" for="@item.PermissionId">@item.PermissionDescription</label>
                    </div>
                </div>
            }
        </div>
    }

</div>

<script>
    $(document).ready(function () {
        $(":checkbox").change(function (){
            var id = $(event.target).attr('id');
            updatePermissions('@Url.Action("UpdateRolePermissions", "Permissions")', id);
    });
    });
</script>